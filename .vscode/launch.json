  "version": "0.2.0",
  "configurations": [
    {
      "name": "Robot Listener Debug",
      "type": "python",
      "request": "launch",
      "program": "/home/vscode/.local/bin/robot",
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}",
      "env": {
        "KIWI_LOG_LEVEL": "DEBUG"
      },
      "args": [
        "-d",
        "/workspace/output",
        "-P",
        "/workspace/tests/ornekler/birden_fazla_listener",
        "--listener",
        "ListenerKiwi",
        "--listener",
        "ListenerAnalizci",
        "-i",
        "listener",
        "."
      ]
    },
    //--------------------------------------------
    // Örnekler için koşturma/hata ayıklama ayarları
    //--------------------------------------------
    //bununla python debug oluyor, robot değil
    {
      "name": "birden_fazla_listener > Robot Debug",
      "type": "python",
      "request": "launch",
      "program": "/home/vscode/.local/bin/robot",
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}",
      "env": {
        "KIWI_LOG_LEVEL": "DEBUG"
      },
      "args": [
        "-d",
        "/workspace/output",
        "-P",
        "/workspace/tests/ornekler/birden_fazla_listener",
        "--suite",
        "Tests",
        "--listener",
        "ListenerKiwi",
        // "--listener",
        // "ListenerAnalizci",
        "-i",
        "listener",
        "."
      ]
    },
    {
      "name": "RobotCode: Run Current",
      "type": "robotcode",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "target": "${file}"
    },
    {
      "name": "RobotCode: Run All",
      "type": "robotcode",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "target": "."
    },
    {
      "name": "RobotCode: Default",
      "type": "robotcode",
      "request": "launch",
      "purpose": "default",
      "presentation": {
        "hidden": true
      },
      "attachPython": false,
      "pythonConfiguration": "RobotCode: Python"
    },
    {
      "name": "RobotCode: Python",
      "type": "python",
      "request": "attach",
      "presentation": {
        "hidden": true
      },
      "justMyCode": true
    }
  ]
}
